RewriteEngine On

# Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Custom Routes
RewriteRule ^av/?$ pages/av.html [L]
RewriteRule ^bikes/?$ pages/bikes.html [L]
RewriteRule ^web/?$ pages/web.html [L]
RewriteRule ^sim/?$ pages/sim.html [L]

# Error Pages
ErrorDocument 404 /index.html